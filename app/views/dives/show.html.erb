<div class="container">

  <div class="row text-center">
    <%= cl_image_tag @dive.user.photo.path %>
  </div>

  <div class="row description">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <h4>A propos de cette plong√©</h4>
      <p> <%= @dive.description %> </p>
      <a href="#">contacter le plongeur</a>

      <% if user_signed_in? %>
        <button class="btn btn-primary" data-toggle="modal" data-target="#bookingModal">Confirm your dive</button>
      <% else %>
        <%= link_to t(".sign_in", default: "Confirm your dive"), new_user_session_path, class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>

  <div class="col-xs-12 col-md-offset-3 col-md-6">
    <hr>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <div class="col-xs-2 col-md-2">
        <h5>location</h5>
      </div>
      <div class="col-xs-10 col-md-10">
        <%= @dive.location %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-offset-3 col-md-6">
    <hr>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <div class="col-xs-2 col-md-2">
        <h5>capacity</h5>
      </div>
      <div class="col-xs-10 col-md-10">
        <%= @dive.capacity %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-offset-3 col-md-6">
    <hr>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <div class="col-xs-2 col-md-2">
        <h5>price</h5>
      </div>
      <div class="col-xs-10 col-md-10">
        <%= @dive.price %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-offset-3 col-md-6">
    <hr>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <div class="col-xs-2 col-md-2">
        <h5>depth required</h5>
      </div>
      <div class="col-xs-10 col-md-10">
        <%= @dive.depth_required %>
      </div>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <%= render 'shared/booking-modal' %>
<% end %>

